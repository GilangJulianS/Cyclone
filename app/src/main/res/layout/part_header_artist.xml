<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/img_header_background"
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:scaleType="centerCrop"
		android:src="@drawable/wallpaper"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:background="@color/dim_filter"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/img_user"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:transitionName="picture"
			android:layout_marginTop="40dp"
			android:scaleType="centerCrop"
			android:src="@drawable/background_login"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#fff"
			android:text="OneRepublic"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_favorites_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:textStyle="bold"
					android:textColor="#fff"
					android:text="3K"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:text="Favorites"/>


			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_listeners_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:textStyle="bold"
					android:textColor="#fff"
					android:text="7M"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:text="Monthly\nListener"/>

			</LinearLayout>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingRight="10dp"
				android:paddingLeft="10dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/btn_flat_transparent"
				android:src="@drawable/ic_more_horiz_white_24dp"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/group_btn_own_profile"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="5dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:gravity="center_horizontal"
			android:background="#fff"
			android:orientation="horizontal">

			<Button
				android:id="@+id/btn_add_showlist"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginRight="10dp"
				android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
				style="@style/Button.Header.White"
				android:text="Play"/>

			<Button
				android:id="@+id/btn_upload"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:drawableLeft="@drawable/ic_add_black_24dp"
				style="@style/Button.Header.White"
				android:text="Add to Favorites"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#888"/>

	</LinearLayout>

</RelativeLayout>
