<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/img_header_background"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:scaleType="centerCrop"
		android:src="@drawable/wallpaper"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:background="@color/dim_filter"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#fff"
			android:text="Happy Holiday"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:textSize="16sp"
			android:textColor="#fff"
			android:text="By Michael Justin"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:textSize="16sp"
			android:textColor="#fff"
			android:text="Fullfill your day with this playlist #funky"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/group_tracks"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:background="@drawable/btn_flat_transparent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_tracks_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:textStyle="bold"
					android:textColor="#fff"
					android:text="40"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:text="Tracks"/>


			</LinearLayout>

			<LinearLayout
				android:id="@+id/group_likes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:background="@drawable/btn_flat_transparent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_likes_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:textStyle="bold"
					android:textColor="#fff"
					android:text="1624"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:text="Likes"/>


			</LinearLayout>

			<LinearLayout
				android:id="@+id/group_comments"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:background="@drawable/btn_flat_transparent"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_comment_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:textStyle="bold"
					android:textColor="#fff"
					android:text="8237"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:text="Comments"/>

			</LinearLayout>

			<ImageButton
				android:id="@+id/btn_menu"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/btn_flat_transparent"
				android:src="@drawable/ic_more_horiz_white_24dp"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/group_btn_own_profile"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="9dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal"
			android:background="#fff"
			android:orientation="horizontal">

			<Button
				android:id="@+id/btn_add_showlist"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginRight="10dp"
				android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
				style="@style/Button.Header.White"
				android:text="Play"/>

			<Button
				android:id="@+id/btn_upload"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:drawableLeft="@drawable/ic_favorite_black_24dp"
				style="@style/Button.Header.White"
				android:text="Like"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#888"/>

	</LinearLayout>

</RelativeLayout>
