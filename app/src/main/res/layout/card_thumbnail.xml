<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/card"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	android:layout_weight="1"
	app:cardElevation="2dp"
	app:cardCornerRadius="2dp"
	android:clipToPadding="false"
	android:foreground="?android:attr/selectableItemBackground"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#fff"
		android:orientation="vertical">


		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.cyclone.custom.SquareImageView
				android:id="@+id/img_cover"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:transitionName="thumbnail"
				android:scaleType="centerCrop"
				android:src="@drawable/wallpaper"/>

			<com.cyclone.custom.SquareImageView
				android:id="@+id/img_heart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="40dp"
				android:src="@drawable/ic_favorite_white_48dp"
				android:scaleType="centerCrop"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:visibility="gone"
				android:tint="#9F00"/>

		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:paddingBottom="10dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/txt_primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:singleLine="true"
					android:ellipsize="marquee"
					android:textStyle="bold"
					android:text="Melawan Asap"/>

				<TextView
					android:id="@+id/txt_secondary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:singleLine="true"
					android:ellipsize="marquee"
					android:textSize="11sp"
					android:text="Prambors FM Jakarta"/>

				<TextView
					android:id="@+id/txt_tertiary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:singleLine="true"
					android:ellipsize="marquee"
					android:textSize="10sp"
					android:text="17 Sept 2015 - 10:09"/>


			</LinearLayout>

			<ImageButton
				android:id="@+id/btn_menu"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:src="@drawable/ic_more_vert_black_24dp"
				android:background="@drawable/btn_flat_transparent_oval"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>