<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:padding="20dp"
	android:background="#fff"
	android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center_horizontal"
		android:text="Select your content you want to\nupload by tapping icon below"/>

	<ImageView
		android:id="@+id/btn_upload"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_marginTop="20dp"
		android:padding="10dp"
		android:background="@drawable/btn_flat_transparent"
		android:src="@drawable/ic_cloud_upload_black_48dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:text="Max Duration : 1 Min"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="16 Min"/>

		<View
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Out of 30 Min"/>

	</LinearLayout>

	<SeekBar
		android:id="@+id/seekbar"
		android:layout_width="match_parent"
		android:layout_height="15dp"
		android:progress="50"
		android:progressDrawable="@drawable/seekbar_progress_upload"
		android:thumb="@android:color/transparent"
		android:layout_marginTop="20dp"/>

</LinearLayout>
